package com.ts.rest.Restfulapi;
import java.sql.*;

public class ReceiveDAO {
	ResultSet rs;
	public Receive getReceive(String dis_name,String med_name) {
		Receive p = new Receive();
		String sql = "select * from donate where dis_name='" + dis_name + "' AND med_name='" + med_name + "'";
		try {
			Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/person", "root","vasu1972"); 
			PreparedStatement ps = con.prepareStatement(sql);
			ps.setString(1, dis_name);
			rs = ps.executeQuery();
			if(rs.next()) {
				p.setId(rs.getInt(1));
				p.setName(rs.getString(2));
				p.setGender(rs.getString(3));
				p.setCity(rs.getString(4));
			}
		} catch (Exception e) {
			e.printStackTrace();
		}
		return p;
	}

	public ReceiveDAO() {
		super();
		
	}

}
